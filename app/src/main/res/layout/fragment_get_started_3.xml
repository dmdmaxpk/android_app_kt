<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.activities.GetStartedActivity"
    android:weightSum="3">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/channels"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:src="@drawable/favt_programs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="2">

        <TextView
            android:id="@+id/streamTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:textStyle="bold"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Watch top\nPrograms"/>

        <TextView
            android:id="@+id/streamTvTicker"
            android:textColor="@color/cloudy_gray"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Anytime, Anywhere" />
    </LinearLayout>
</LinearLayout>