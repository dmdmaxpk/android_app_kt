<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_gradient">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/back_arrow"
            android:src="@drawable/back_arrow"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:padding="12dp"
            android:cropToPadding="true"/>
        <TextView
            android:fontFamily="@font/montserrat_bold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Miscellaneous"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/paywallDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/packagesPb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="contact us"
                    android:fontFamily="@font/montserrat_bold"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <FrameLayout
                android:paddingLeft="15dp"
                android:id="@+id/contact_us_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_navy_blue"
                android:visibility="gone">
                <TextView
                    android:text="Click here to contact us"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"/>

                <TextView
                    android:id="@+id/contact_us_mobile_number"
                    android:text="03xxxxxxxxxx"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:paddingRight="15dp"/>
            </FrameLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="about"
                    android:fontFamily="@font/montserrat_bold"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <FrameLayout
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_navy_blue">
                <TextView
                    android:text="App Version"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"/>

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/app_version"
                    android:text="03xxxxxxxxxx"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:paddingRight="15dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="2dp"
                android:paddingLeft="15dp"
                android:id="@+id/view_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_navy_blue">
                <TextView
                    android:text="View Privacy Policy"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"/>
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="2dp"
                android:paddingLeft="15dp"
                android:id="@+id/view_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_navy_blue">
                <TextView
                    android:text="View Terms &amp; Conditions"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"/>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>


