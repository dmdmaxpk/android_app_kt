<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkColorPrimary"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_navy_blue">
        <ImageView
            android:id="@+id/back_arrow"
            android:src="@drawable/back_arrow"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:padding="12dp"
            android:cropToPadding="true"/>
        <TextView
            android:fontFamily="@font/montserrat_bold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:id="@+id/title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:ellipsize="end"
            android:maxLines="1"/>
    </FrameLayout>
    <com.google.android.exoplayer2.ui.PlayerView
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_height"
        app:use_controller="true"
        android:background="@color/dark_navy_blue"
        android:fitsSystemWindows="true"
        app:resize_mode="fill"
        app:controller_layout_id="@layout/exo_custom_control_view"/>
    <LinearLayout
        android:id="@+id/meta_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/video_view_tail"
            app:layout_constraintTop_toBottomOf="@id/video_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#393d65"
            android:paddingRight="10dp"
            android:paddingLeft="15dp">
            <LinearLayout
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/liveOrVod"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/rounded_corner_red"
                    android:textColor="@color/white"
                    android:text="Live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="true"/>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/channel_title"
                    android:fontFamily="@font/montserrat_bold"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="70dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/share">
                <TextView
                    android:text="Share"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            app:layout_constraintTop_toBottomOf="@id/video_view_tail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/live_channels_recommendation_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.core.widget.NestedScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:paddingLeft="5dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textStyle="bold"
                                android:text="Live Channels"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="10dp"
                                android:id="@+id/recommended_live_channels"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:paddingLeft="5dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textStyle="bold"
                                android:text="Headlines"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="15dp"
                                android:id="@+id/recommended_headlines"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:paddingLeft="5dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textStyle="bold"
                                android:text="Entertainment Channels"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="15dp"
                                android:id="@+id/recommended_entertainment_channels"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/recommended_videos_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:paddingTop="15dp"
                                android:paddingLeft="17dp"
                                android:paddingRight="10dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textStyle="bold"
                                android:text="Recommended For You"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:layout_marginTop="15dp"
                                android:id="@+id/recommended_videos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/episodes_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/episodes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/network_status"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="3dp"/>
</LinearLayout>