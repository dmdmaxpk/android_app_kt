<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/header1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        layout="@layout/goonj_header_logo_with_header_bar"/>

    <TextView
        android:id="@+id/verification_code_txt"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/header1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="bold"/>



    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verification_code_txt"
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/et1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:nextFocusRight="@+id/et2"
            android:background="@drawable/rectangle_shape_edittext"
            android:textColor="@color/white">
            <requestFocus />
        </EditText>

        <EditText
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/et2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:background="@drawable/rectangle_shape_edittext"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>

        <EditText
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/et3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:background="@drawable/rectangle_shape_edittext"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>

        <EditText
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/et4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:background="@drawable/rectangle_shape_edittext"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>

        <EditText
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/et5"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:background="@drawable/rectangle_shape_edittext"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>

        <EditText
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/et6"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:background="@drawable/rectangle_shape_edittext"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/verify"
        android:background="@drawable/simple_focused_button_selector"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_otp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:clickable="true">
        <TextView
            android:fontFamily="@font/montserrat_bold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="@string/verify"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>