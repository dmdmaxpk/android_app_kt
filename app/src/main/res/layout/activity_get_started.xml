<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.activities.GetStartedActivity"
    android:background="@drawable/get_started_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_thumb"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/app_thumb"
        android:layout_width="170dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_weight="1"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_thumb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/indicator"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:dotsStrokeColor="#686569"
        app:dotsSize="10dp"
        />

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="2">

        <Button
            android:layout_margin="3dp"
            android:id="@+id/skip"
            android:background="@drawable/simple_non_focused_button_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_margin="3dp"
            android:id="@+id/join"
            android:background="@drawable/simple_focused_button_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textAllCaps="true"
            android:text="@string/join_now"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>