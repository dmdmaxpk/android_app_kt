<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.activities.GetStartedActivity"
    android:background="@drawable/get_started_bg">

    <include
        android:id="@+id/logo_header"
        layout="@layout/goonj_header_logo"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/logo_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/indicator"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:dotsStrokeColor="#686569"
        app:dotsSize="10dp"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/indicator">

        <Button
            android:id="@+id/skip"
            android:background="@drawable/simple_non_focused_button_selector"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/join"
            android:layout_marginLeft="30dp"
            android:background="@drawable/simple_focused_button_selector"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAllCaps="true"
            android:text="@string/join_now"
            android:textColor="@color/white"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>